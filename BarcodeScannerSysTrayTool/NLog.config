<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off">

  <targets>
    <target name="logfile" xsi:type="File" fileName="${basedir}/logs/${date:format=yyyyMMdd}/log_${date:format=yyyyMMddHH}.txt" layout="${longdate}|${level:uppercase=true}|${callsite:className=true:includeSourcePath=false:methodName=false}|${message}" />
    <target xsi:type="Console" name ="Console"/>
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="logfile" />
    <logger name="*" minlevel="Info" writeTo="Console"></logger>
  </rules>
</nlog>
